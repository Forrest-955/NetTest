<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_net_test"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="网络测试"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/keyboardPress"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btn_emmc_test"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="EMMC读写测试"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/keyboardPress"
            android:layout_margin="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_tf_test"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="TF读写测试"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/keyboardPress"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btn_baking_test"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="烤机"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/keyboardPress"
            android:layout_margin="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_camera_test"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="摄像头"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/keyboardPress"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btn_reboot_test"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="开关机"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@color/keyboardPress"
            android:layout_margin="1dp"/>
    </LinearLayout>
</LinearLayout>
